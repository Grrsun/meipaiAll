<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/search_layout" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_find_banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"></android.support.v4.view.ViewPager>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门话题"
        android:textSize="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="#b5b4ba"/>
    <GridView
        android:id="@+id/gridView_topic"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:numColumns="2"
        android:horizontalSpacing="1dp"
        android:verticalSpacing="1dp"></GridView>
    <ImageView
        android:id="@+id/image_nearby"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/find_nearby"/>

    <ImageView
        android:id="@+id/image_top7day"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/find_top7"/>

    <ImageView
        android:id="@+id/image_new_user"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/find_new_user"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_select_activity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/select_activity"/>
        <ImageView
            android:id="@+id/image_want_focus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/want_focus"/>
    </LinearLayout>
</LinearLayout>