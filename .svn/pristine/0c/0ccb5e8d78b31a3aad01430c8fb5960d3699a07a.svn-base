<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_up"
    android:orientation="vertical"
    tools:context="com.gzw.mp.activities.PhoneLogInActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/login_title"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/phone_login_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="11dp"
            android:src="@drawable/ic_collapse_psd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/phone_login_iv_back"
            android:gravity="center_vertical"
            android:text="返回 "
            android:textColor="@color/user_textcolor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/log_in_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="手机号登陆"
            android:textColor="@color/login_titletext"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="国家和地区"
            android:textColor="@color/login_country"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_toLeftOf="@+id/phone_login_chose_country"
            android:gravity="center"
            android:text="中国"
            android:textColor="@color/user_textcolor"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/phone_login_chose_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="11dp"
            android:src="@drawable/ic_collapse_nor" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="13dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_set_cover" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="+86"
            android:textColor="@color/user_textcolor"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_set_cover_a" />

        <EditText
            android:id="@+id/login_et_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="6.2"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:paddingLeft="13dp"
            android:textColor="@color/user_textcolor"
            android:textColorHint="@color/login_hint"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="13dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_set_cover" />

    <EditText
        android:id="@+id/lonin_et_pwd"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="13dp"
        android:background="@null"
        android:hint="请填写密码，6-16位字符"
        android:inputType="textPassword"
        android:textColor="@color/user_textcolor"
        android:textColorHint="@color/login_hint"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_down"
        android:orientation="vertical">

        <TextView
            android:id="@+id/log_in_xielou"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="bottom|center_horizontal"
            android:text="我们不会泄露您的任何信息哦"
            android:textColor="@color/login_xielou"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/login_nextstep"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/next_step_bg"
            android:gravity="center"
            android:text="登陆"
            android:enabled="false"
            android:textColor="@color/login_xielou"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/log_in_forgetorregiser"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/log_in_regiser"
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_gravity="center_vertical|start"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="没有美拍账号？去注册"
                android:textColor="@color/user_textcolor"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/log_in_forget"
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginLeft="13dp"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:text="忘记密码？"
                android:textColor="@color/user_textcolor"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
