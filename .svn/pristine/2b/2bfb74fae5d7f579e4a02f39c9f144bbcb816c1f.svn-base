<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/user_login_dialog_bg"
        android:layout_width="330dp"
        android:layout_height="350dp"
        android:layout_margin="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_login_dialog" />

    <ImageView
        android:id="@+id/user_logo_login_dialog"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/user_login_iv_close"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_title_meipai" />

    <LinearLayout
        android:id="@+id/user_login_weixin"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_below="@+id/user_logo_login_dialog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/user_weixin_login_selctor"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="70dp"
            android:layout_weight="0.3"
            android:src="@drawable/ic_login_weixin_platform" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.5"
            android:text="微信登陆"
            android:textColor="@color/whitesmoke"
            android:textSize="19sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_login_qq"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_below="@+id/user_login_weixin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/user_qqlogin_selctor"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="70dp"
            android:layout_weight="0.3"
            android:src="@drawable/ic_share_qq_nor" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.5"
            android:text="QQ登陆"
            android:textColor="@color/whitesmoke"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_login_other"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@+id/user_login_qq"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/album_bottom_tip" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.6"
            android:gravity="center"
            android:text="其他登陆方式"
            android:textColor="@color/user_login_other"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/album_bottom_tip" />
    </LinearLayout>

    <ImageView
        android:id="@+id/user_login_iv_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/user_login_dialog_bg"
        android:layout_alignTop="@+id/user_login_dialog_bg"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="-15dp"
        android:src="@drawable/ic_close_dialog_pressed" />

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_login_other"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/user_register_tel"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/user_login_tel_selctor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="left|center_vertical"
                android:text="手机登陆/注册"
                android:textColor="@color/user_login_other"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="left"
                android:src="@drawable/user_login_weibo_selctor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="微博"
                android:textColor="@color/user_login_other"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/user_login_facebook_selctor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Facebook"
                android:textColor="@color/user_login_other"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
