<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/black" >

        <ImageView
            android:id="@+id/capture_picture_record"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/btn_take_photo_a" />

       
        <LinearLayout
            android:id="@+id/capture_picture_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/capture_picture_picture_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/btn_photo_album_a" />

            <TextView
                android:id="@+id/capture_picture_picture_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="导入照片"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout><!-- From: file:/E:/AndroidStudioWorkPlace/MeiPai/app/src/main/res/layout/capture_picture.xml -->