<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/user_me"
        android:gravity="center"
        android:padding="8dp"
        android:text="我"
        android:textColor="@color/user_me_color"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/user_scrollview">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 登陆-->
            <RelativeLayout
                android:id="@+id/user__rl_login"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/user_selcoter"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/iv_user"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/icon_avatar_large" />

                <TextView
                    android:id="@+id/tv_user_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/iv_user"
                    android:gravity="bottom"
                    android:text="未登录"
                    android:textColor="@color/user_textcolor"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignLeft="@+id/tv_user_sign"
                    android:layout_below="@id/tv_user_sign"
                    android:gravity="center"
                    android:text="立即登录看看我的主页"
                    android:textColor="@color/user_smalltextcolor"
                    android:textSize="13sp" />

            </RelativeLayout>

            <!-- 草稿箱-->
            <LinearLayout
                android:id="@+id/user__ll_draft"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/user_selcoter"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_draft_play" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="100dp"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:text="草稿箱"
                    android:textColor="@color/user_textcolor"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:src="@drawable/icon_left_cell_arrow" />
            </LinearLayout>

            <!-- 找好友-->
            <LinearLayout
                android:id="@+id/user__ll_findfrend"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/user_selcoter"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_draft_play" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="100dp"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:text="找好友"
                    android:textColor="@color/user_textcolor"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:src="@drawable/icon_left_cell_arrow" />
            </LinearLayout>

            <!-- 你可能想关注的人-->
            <LinearLayout
                android:id="@+id/user__ll_mapattention"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/user_selcoter"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_draft_play" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="100dp"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:text="你可能想关注的人"
                    android:textColor="@color/user_textcolor"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:src="@drawable/icon_left_cell_arrow" />
            </LinearLayout>

            <!-- 让视频更好玩-->
            <LinearLayout
                android:id="@+id/user__ll_player"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/user_selcoter"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_draft_play" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="100dp"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:text="让视频更好玩"
                    android:textColor="@color/user_textcolor"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:src="@drawable/icon_left_cell_arrow" />
            </LinearLayout>

            <!-- 美拍小技巧-->
            <LinearLayout
                android:id="@+id/user__ll_skills"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/user_selcoter"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_draft_play" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="100dp"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:text="美拍小技巧"
                    android:textColor="@color/user_textcolor"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:src="@drawable/icon_left_cell_arrow" />
            </LinearLayout>

            <!-- 设置-->
            <LinearLayout
                android:id="@+id/user__ll_setting"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/user_selcoter"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_draft_play" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="100dp"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:text="设置"
                    android:textColor="@color/user_textcolor"
                    android:textSize="17sp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="3"
                    android:src="@drawable/icon_left_cell_arrow" />
            </LinearLayout>

            <!-- 广告-->
            <ImageView
                android:id="@+id/user_iv_ad"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:scaleType="fitStart"
                android:src="@drawable/user_ad" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>


