<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/black" >

        <ImageView
            android:id="@+id/capture_video_record"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:src="@drawable/btn_continue_recorder_a" />

        <LinearLayout
            android:id="@+id/capture_video_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/capture_video_photo_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/btn_picture_album_normal" />

            <TextView
                android:id="@+id/capture_viode_photo_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="照片电影"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/capture_video_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/capture_video_video_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/btn_video_album_normal" />

            <TextView
                android:id="@+id/capture_viode_video_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="导入视频"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>