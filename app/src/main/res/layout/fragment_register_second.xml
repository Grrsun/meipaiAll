<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_up"
    android:orientation="vertical"
    tools:context="com.gzw.mp.activities.LogInRegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3.5"
            android:gravity="right"
            android:text="我们已发送验证码到"
            android:textColor="@color/login_country"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text=" +86 "
            android:textColor="@color/login_next_bg__b"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/register_second_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:gravity="left"
            android:text="13839770951 "
            android:textColor="@color/login_next_bg__b"
            android:textSize="14sp" />

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="13dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_set_cover" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/lonin_et_pwd"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginLeft="13dp"
            android:layout_weight="5"
            android:background="@null"
            android:hint="请输入收到的验证码"
            android:textColor="@color/user_textcolor"
            android:textColorHint="@color/login_hint"
            android:textSize="16sp" />

        <Button
            android:id="@+id/register_again"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="13dp"
            android:layout_weight="2.5"
            android:background="@drawable/next_step_bg"
            android:enabled="false"
            android:gravity="center"
            android:text="重新发送"
            android:textColor="@drawable/again_selctor"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="13dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_set_cover" />

    <Button
        android:id="@+id/login_nextstep"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/next_step_bg"
        android:enabled="false"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/login_xielou"
        android:textSize="18sp" />
</LinearLayout>
