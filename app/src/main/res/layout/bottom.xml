<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/tab_home"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@color/black"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tab_home_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="@drawable/ic_tab_home_press" />

        <TextView
            android:id="@+id/tab_home_text"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="美拍"
            android:textColor="@color/deeppink"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_friends"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@color/black"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tab_friends_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="@drawable/ic_tab_friends_a" />

        <TextView
            android:id="@+id/tab_friends_text"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="我的关注"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/capture_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/black"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/capture_video_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:src="@drawable/ic_capture_video_normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_find"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/black"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tab_find_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="@drawable/ic_tab_find_a" />

        <TextView
            android:id="@+id/tab_find_text"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="发现"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/black"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tab_user_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="@drawable/ic_tab_user_normal" />

        <TextView
            android:id="@+id/tab_user_text"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="我"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>